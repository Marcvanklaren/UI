<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gerwindekruijf.ui">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Task_Activity"
            android:label="Task" />
        <activity
            android:name=".AddGroup_Act"
            android:label="Add Group" />
        <activity
            android:name=".MyGroupes_Activity"
            android:label="My Groupes" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".GroupMemberOverview"
            android:label="@string/title_activity_group_member_overview"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GroupOnclick"
            android:label="@string/title_activity_group_onclick"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>